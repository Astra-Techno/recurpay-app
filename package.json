{
  "name": "recurring-pay-app",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "dev:client": "vite --mode client",
    "dev:admin": "vite --mode admin",
    "build": "vite build",
    "preview": "vite preview",
    "build:client": "rm -rf dist/client && vite build --mode client && mv dist/client/src/themes/client/index.html dist/client/ && rm -rf dist/client/src/ && cp -f .htaccess dist/client/",
    "build:admin": "rm -rf dist/admin && vite build --mode admin && mv dist/admin/src/themes/admin/index.html dist/admin/ && rm -rf dist/admin/src/ && cp -f .htaccess dist/admin/",
    "build:all": "npm run build:client && npm run build:admin"
  },
  "dependencies": {
    "@fontsource/open-sans": "^5.1.0",
    "@formkit/core": "latest",
    "@formkit/icons": "latest",
    "@formkit/pro": "latest",
    "@formkit/themes": "latest",
    "@formkit/vue": "latest",
    "@heroicons/vue": "^2.2.0",
    "@unhead/vue": "^1.9.10",
    "apexcharts": "^3.35.5",
    "autoprefixer": "latest",
    "axios": "^1.8.1",
    "crypto-js": "^4.2.0",
    "cssnano": "^7.0.6",
    "lucide-vue-next": "^0.485.0",
    "path": "^0.12.7",
    "photoswipe": "^5.4.4",
    "pinia": "^2.1.7",
    "postcss": "latest",
    "sweetalert2": "^11.6.13",
    "tailwindcss": "latest",
    "vue": "^3.4.21",
    "vue-height-collapsible": "^0.1.1",
    "vue-i18n": "^9.13.0",
    "vue-router": "^4.5.0",
    "vue-simple-context-menu": "^4.1.0",
    "vue3-apexcharts": "^1.4.1",
    "vue3-json-viewer": "^2.2.2",
    "vue3-perfect-scrollbar": "^2.0.0",
    "vue3-popper": "^1.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@intlify/unplugin-vue-i18n": "^4.0.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/eslint-plugin": "1.1.7",
    "@vue/eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.29.0",
    "prettier": "^3.3.3",
    "vite": "^6.2.0"
  }
